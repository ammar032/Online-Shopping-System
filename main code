    friend ostream& operator <<(ostream& obj, Customer c1)
    {
        obj << "======================================" << endl;
        obj << "\t\tPROFILE" << endl;
        obj << "======================================" << endl;
        obj << "Name: " << c1.name << endl;
        obj << "Age: " << c1.age << endl;
        obj << "Username: " << c1.username << endl;
        obj << "Password: " << c1.password << endl;
